@{
    ViewBag.Title = "Home Page";
}
@model EksamenC_.Models.TimeRegVM


<!DOCTYPE html>
<html>
<head>
    <title>Register Time</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    @using (Html.BeginForm("Submit", "Home", FormMethod.Post))
    {
        <div class="SelectEmployee">
            @Html.LabelFor(model => model.SelectedEmployeeInitials, "Choose Employee")
            @Html.DropDownListFor(model => model.SelectedEmployeeInitials, Model.EmployeeList, new { @class = "form-control" })
        </div>
        <div class="SelectTask">
            @Html.LabelFor(model => model.SelectedTaskName, "Choose Task")
            @Html.DropDownListFor(model => model.SelectedTaskName, Model.TaskList, new { @class = "form-control" })
        </div>
        <div class="SelectStartTime">
            @Html.LabelFor(model => model.SelectedStartTime, "Start Time", new { @class = " form-control" })
            @Html.TextBoxFor(model => model.SelectedStartTime, new { @type = "datetime-local", @class = "form-control" })
        </div>
        <div class="SelectEndTime">
            @Html.LabelFor(model => model.SelectedEndTime, "End Time", new { @class = " form-control" })
            @Html.TextBoxFor(model => model.SelectedEndTime, new { @type = "datetime-local", @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
    @if (ViewBag.Message != null)
    {
        <p style="color: red">@ViewBag.Message</p>
    }
    @if(ViewBag.Message2 != null)
            {
                <p style="color: lawngreen">@ViewBag.Message2</p>
            }
</body>
</html>
